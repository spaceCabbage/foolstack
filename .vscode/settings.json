{
  // File nesting (your existing config)
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    // root
    "README.md": "LICENSE.md, CLAUDE.md, .dockerignore, .env.example, .gitattributes, .gitignore, Caddyfile, Makefile, docker-compose.yml",
    // client
    "package.json": ".editorconfig, .prettierrc.json, Dockerfile, eslint.config.js, vite.config.js, jsconfig.json, package-lock.json, bun.lockb",
    // server
    "pyproject.toml": "Dockerfile, .dockerignore, manage.py, poetry.lock, poetry.toml"
  },
  "explorer.sortOrder": "default",

  "python.defaultInterpreterPath": "./server/.venv/bin/python",
  "python.terminal.activateEnvironment": true,

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  "python.analysis.extraPaths": ["./server"],
  "python.analysis.typeCheckingMode": "basic",

  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.venv": false
  }
}
